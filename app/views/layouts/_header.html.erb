<header class="navbar navbar-fixed-top navbar-inverse">
 <div class="container">
   <%= link_to t("sample"), root_path, id: "logo" %>
   <nav>
     <ul class="nav navbar-nav navbar-right">
       <li><%= link_to t("static_pages.home.title"), root_path %></li>
       <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", "#" %></li>
          <li class="dropdown">  
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">  
              <%= t "users.acc"%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("users.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to t("users.login"), login_path %></li>
          <% end %>
     </ul>
   </nav>
 </div>
</header>
